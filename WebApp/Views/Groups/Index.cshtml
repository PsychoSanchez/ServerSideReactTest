@model IEnumerable<WebApp.Models.GroupsModel>

@{
    ViewBag.Title = "Учебные группы";
}

<h2>@ViewBag.Title.</h2>
<ol class="breadcrumb">
  <li class="breadcrumb-item">@Html.ActionLink("Учебные группы", "Index")</li>
</ol>
<div class="row">
    <div class="col-xs-12">
        <table class="table table-striped table-bordered">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.GroupName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TutorName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.StudentsCount)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.GroupName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TutorName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.StudentsCount)
                    </td>
                    <td>
                        @Html.ActionLink("Редактировать", "Edit", new { id = item.GroupID })
                    </td>
                </tr>
            }

        </table>
    </div>
   
</div>


<div class="row">
    <div class="col-xs-12">
        @Html.ActionLink("Создать учебную группу", "Create", null, new { @class = "btn btn-primary" })
    </div>
</div>